{
    "name": "openui5",
    "version": "0.0.1",
    "scripts": {
        "start": "ui5 serve --config=uimodule/ui5.yaml --open index.html",
        "build:ui": "run-s build:uimodule",
        "build": "run-s build:uimodule",
        "test": "npm run karma-ci",
        "karma-ci": "karma start karma-ci.conf.js",
        "clearCoverage": "shx rm -rf coverage",
        "karma": "run-s clearCoverage karma-ci",
        "lint": "eslint ./**/webapp/**/*.js && prettier --plugin-search-dir=. --check ./**/webapp/**/*.{js,xml} --no-error-on-unmatched-pattern",
        "lint-fix": "eslint ./**/webapp/**/*.js --fix && prettier --plugin-search-dir=. --write ./**/webapp/**/*.{js,xml} --no-error-on-unmatched-pattern",
        "build:uimodule": "ui5 build --config=uimodule/ui5.yaml --clean-dest --dest uimodule/dist --include-task=generateManifestBundle",
        "build:uimodule:deploy": "ui5 build self-contained --all=true --config=uimodule/ui5-deploy.yaml --clean-dest --dest dist",
        "build:mtar": "rm -rf approuter/webapp && mv dist approuter/webapp && mbt build",
        "wdi5": "wdio run ./wdio.conf.js"
    },
    "devDependencies": {
        "@prettier/plugin-xml": "latest",
        "@ui5/cli": "^3",
        "@wdio/cli": "^7",
        "@wdio/local-runner": "^7",
        "@wdio/mocha-framework": "^7",
        "@wdio/spec-reporter": "^7",
        "chromedriver": "latest",
        "eslint": "latest",
        "karma": "^6.4.2",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage": "^2.2.0",
        "karma-ui5": "latest",
        "mbt": "^1.2.23",
        "npm-run-all": "^4.1.5",
        "prettier": "latest",
        "shx": "^0.3.4",
        "ui5-middleware-livereload": "latest",
        "wdio-chromedriver-service": "^7",
        "wdio-ui5-service": "latest"
    }
}
